<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dude.theadventurecaelopia"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.dude.theadventurecaelopia.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dude.theadventurecaelopia.DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName="com.dude.theadventurecaelopia.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dude.theadventurecaelopia.MainActivity" />
        </activity>
        <activity
            android:name="com.dude.theadventurecaelopia.NewGameActivity"
            android:label="@string/title_activity_game"
            android:screenOrientation="landscape"
            android:configChanges="keyboardHidden|orientation"
            android:parentActivityName="com.dude.theadventurecaelopia.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dude.theadventurecaelopia.MainActivity" />
        </activity>
        <activity
            android:name="com.dude.theadventurecaelopia.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.dude.theadventurecaelopia.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dude.theadventurecaelopia.MainActivity" />
        </activity>
        <activity
            android:name="com.dude.theadventurecaelopia.CreditsActivity"
            android:label="@string/title_activity_credits"
            android:parentActivityName="com.dude.theadventurecaelopia.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dude.theadventurecaelopia.MainActivity" />
        </activity>
    </application>

</manifest>
